{{ 'section-move-usps.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveUsps-{{ section.id }}"
  class="section move-usps {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div
    class="page-width move-section-padding"
    style="{% if section.settings.padding_top > 0 %}padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}"
  >
    <div class="move-usps__layout">
      <div class="move-usps__column move-usps__column--left">
        <div class="move-usps__accordion">
          {%- for block in section.blocks -%}
            {%- if block.type == 'usp' -%}
              {%- liquid
                assign color_index = forloop.index0 | modulo: 3
                assign color_class = 'move-usps__item--white'
                if color_index == 1
                  assign color_class = 'move-usps__item--pink'
                elsif color_index == 2
                  assign color_class = 'move-usps__item--brown'
                endif
              -%}
              <article class="move-usps__item {{ color_class }}" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="move-usps__icon">
                    {{ block.settings.icon | image_url: width: 96 | image_tag: widths: '48, 64, 96', class: 'move-usps__icon-image' }}
                  </div>
                {%- endif -%}

                {%- if block.settings.title != blank -%}
                  <h3 class="h3 move-usps__title">{{ block.settings.title }}</h3>
                {%- endif -%}

                {%- if block.settings.text != blank -%}
                  <p class="move-usps__text text-body">{{ block.settings.text }}</p>
                {%- endif -%}
              </article>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      <div class="move-usps__column move-usps__column--right">
        {%- if section.settings.side_image != blank -%}
          <div class="move-usps__image-wrapper">
            {{
              section.settings.side_image
              | image_url: width: 1600
              | image_tag:
                widths: '800, 1200, 1600',
                sizes: '50vw',
                class: 'move-usps__image'
            }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE USP grid",
  "tag": "section",
  "class": "section move-usps",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Derfor fungerer MOVE Coaching"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text",
      "default": "Langsiktig coaching, varm støtte og en app som er laget for hverdagen – ikke for raske quick fixes."
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Right column image"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns on desktop",
      "default": 3
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "surface"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Top padding override",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding override",
      "default": 0
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "usp",
      "name": "USP",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Langsiktig støtte"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Vi bygger varige vaner steg for steg – uten streng diett eller alt‑eller‑ingenting‑tanker."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MOVE USP grid",
      "category": "MOVE",
      "blocks": [
        { "type": "usp" },
        { "type": "usp" },
        { "type": "usp" }
      ]
    }
  ]
}
{% endschema %}
