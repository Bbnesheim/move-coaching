{{ 'section-move-usps.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveUsps-{{ section.id }}"
  class="section move-usps {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="page-width move-section-padding">
    <header class="move-usps__header {{ section.settings.heading_alignment }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.intro != blank -%}
        <div class="move-usps__intro text-body">
          {{ section.settings.intro }}
        </div>
      {%- endif -%}
    </header>

    <div
      class="move-usps__grid grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--2-col-tablet grid--1-col-tablet-down"
    >
      {%- for block in section.blocks -%}
        {%- if block.type == 'usp' -%}
          <article class="move-usps__item grid__item" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != blank -%}
              <div class="move-usps__icon">
                {{ block.settings.icon | image_url: width: 96 | image_tag: widths: '48, 64, 96', class: 'move-usps__icon-image' }}
              </div>
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <h3 class="h3 move-usps__title">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
              <p class="move-usps__text text-body">{{ block.settings.text }}</p>
            {%- endif -%}
          </article>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE USP grid",
  "tag": "section",
  "class": "section move-usps",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Derfor fungerer MOVE Coaching"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text",
      "default": "Langsiktig coaching, varm støtte og en app som er laget for hverdagen – ikke for raske quick fixes."
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns on desktop",
      "default": 3
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "surface"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "usp",
      "name": "USP",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Langsiktig støtte"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Vi bygger varige vaner steg for steg – uten streng diett eller alt‑eller‑ingenting‑tanker."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MOVE USP grid",
      "category": "MOVE",
      "blocks": [
        { "type": "usp" },
        { "type": "usp" },
        { "type": "usp" }
      ]
    }
  ]
}
{% endschema %}
