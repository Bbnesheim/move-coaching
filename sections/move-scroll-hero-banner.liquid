{{ 'section-move-scroll-hero-banner.css' | asset_url | stylesheet_tag }}
{{ 'section-move-scroll-hero-banner.js' | asset_url | script_tag }}


<section
  id="MoveScrollHeroBanner-{{ section.id }}"
  class="section move-scroll-hero-banner color-{{ section.settings.color_scheme }} gradient"
  data-move-scroll-hero-banner
  style="
    --move-scroll-hero-banner-scroll-height: {{ section.settings.scroll_height }}vh;
    --move-scroll-hero-banner-min-scale: {{ section.settings.min_scale | divided_by: 100.0 }};
    --move-scroll-hero-banner-start-radius: {{ section.settings.start_radius }}px;
  "
>
  <div class="move-scroll-hero-banner__sticky">
    <div class="move-scroll-hero-banner__media" aria-hidden="true">
      <div class="move-scroll-hero-banner__frame">
        {%- if section.settings.video != blank -%}
          {{
            section.settings.video
            | video_tag:
              autoplay: true,
              loop: true,
              muted: true,
              controls: false,
              playsinline: true,
              class: 'move-scroll-hero-banner__video'
          }}
        {%- elsif section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 2800
            | image_tag:
              widths: '750, 1100, 1500, 2000, 2400, 2800',
              sizes: '100vw',
              class: 'move-scroll-hero-banner__image',
              loading: 'eager'
          }}
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg move-scroll-hero-banner__placeholder' }}
        {%- endif -%}

        <div class="move-scroll-hero-banner__overlay" aria-hidden="true"></div>

        <div class="move-scroll-hero-banner__headlines" aria-hidden="true">
          {%- if section.settings.top_heading != blank -%}
            <div class="move-scroll-hero-banner__headline move-scroll-hero-banner__headline--top {{ section.settings.top_heading_size }}">
              {{ section.settings.top_heading }}
            </div>
          {%- endif -%}

          {%- if section.settings.bottom_heading != blank -%}
            <div class="move-scroll-hero-banner__headline move-scroll-hero-banner__headline--bottom {{ section.settings.bottom_heading_size }}">
              {{ section.settings.bottom_heading }}
            </div>
          {%- endif -%}
        </div>

        <div class="move-scroll-hero-banner__frame-ui">
          <div class="move-scroll-hero-banner__frame-header">
            <div class="move-scroll-hero-banner__text-box" aria-hidden="true">
              <div class="move-scroll-hero-banner__text-box-inner">
                {%- if section.settings.heading != blank -%}
                  <h2 class="move-scroll-hero-banner__heading {{ section.settings.heading_size }}">
                    {{ section.settings.heading }}
                  </h2>
                {%- endif -%}

                {%- if section.settings.subheading != blank -%}
                  <div class="move-scroll-hero-banner__subheading rte">
                    {{ section.settings.subheading }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>

          {%- if section.settings.primary_cta_label != blank or section.settings.secondary_cta_label != blank -%}
            <div class="move-scroll-hero-banner__frame-ctas">
              <div class="move-scroll-hero-banner__cta-grid">
                {%- if section.settings.primary_cta_label != blank -%}
                  <a
                    {% if section.settings.primary_cta_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ section.settings.primary_cta_link }}"
                    {% endif %}
                    class="move-scroll-hero-banner__cta move-scroll-hero-banner__cta--brown move-scroll-hero-banner__cta--small"
                  >
                    <span class="move-scroll-hero-banner__cta-content">
                      <span class="move-scroll-hero-banner__cta-heading">{{- section.settings.primary_cta_label | escape -}}</span>
                      {%- if section.settings.primary_cta_description != blank -%}
                        <span class="move-scroll-hero-banner__cta-description">{{- section.settings.primary_cta_description | escape -}}</span>
                      {%- endif -%}
                    </span>
                    <span class="move-scroll-hero-banner__cta-icon" aria-hidden="true">→</span>
                  </a>
                {%- endif -%}

                {%- if section.settings.secondary_cta_label != blank -%}
                  <a
                    {% if section.settings.secondary_cta_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ section.settings.secondary_cta_link }}"
                    {% endif %}
                    class="move-scroll-hero-banner__cta move-scroll-hero-banner__cta--pink move-scroll-hero-banner__cta--large"
                  >
                    <span class="move-scroll-hero-banner__cta-content">
                      <span class="move-scroll-hero-banner__cta-heading">{{- section.settings.secondary_cta_label | escape -}}</span>
                      {%- if section.settings.secondary_cta_description != blank -%}
                        <span class="move-scroll-hero-banner__cta-description">{{- section.settings.secondary_cta_description | escape -}}</span>
                      {%- endif -%}
                    </span>
                    <span class="move-scroll-hero-banner__cta-icon" aria-hidden="true">→</span>
                  </a>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

