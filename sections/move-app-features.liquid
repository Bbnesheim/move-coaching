{{ 'section-move-app-features.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveAppFeatures-{{ section.id }}"
  class="section move-app-features {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div
    class="page-width move-section-padding"
    style="{% if section.settings.padding_top > 0 %}padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}"
  >
    <div class="move-app-features__inner">
      <div class="move-app-features__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="h2">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.intro != blank -%}
          <div class="move-app-features__intro text-body">
            {{ section.settings.intro }}
          </div>
        {%- endif -%}

        <div class="move-app-features__grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'feature' -%}
              <article class="move-app-features__item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="move-app-features__icon">
                    {{ block.settings.icon | image_url: width: 80 | image_tag: widths: '40, 60, 80', class: 'move-app-features__icon-image' }}
                  </div>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                  <h3 class="h3 move-app-features__title">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <p class="move-app-features__text text-body">{{ block.settings.description }}</p>
                {%- endif -%}
              </article>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      <div class="move-app-features__media">
        {%- if section.settings.app_screenshot != blank -%}
          <div class="move-app-features__screenshot media media--portrait">
            {{
              section.settings.app_screenshot
              | image_url: width: 900
              | image_tag:
                widths: '400, 600, 900',
                sizes: 'min(100vw, 480px)',
                class: 'move-app-features__image'
            }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE app features",
  "tag": "section",
  "class": "section move-app-features",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Dette får du i MOVE-appen"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text",
      "default": "Planlegging, oppskrifter, trening og oppfølging samlet i én app som faktisk passer inn i tidsklemma."
    },
    {
      "type": "image_picker",
      "id": "app_screenshot",
      "label": "App screenshot"
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "surface"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Top padding override",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding override",
      "default": 0
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Bygg menyen din"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Planlegg ukens måltider med familievennlige, realistiske oppskrifter tilpasset budsjett og hverdag."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MOVE app features",
      "category": "MOVE",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
