{{ 'section-move-pricing-table.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MovePricingTable-{{ section.id }}"
  class="section move-pricing-table {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div
    class="page-width move-section-padding"
    style="{% if section.settings.padding_top > 0 %}padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}"
  >
    <header class="move-pricing-table__header {{ section.settings.heading_alignment }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.intro != blank -%}
        <div class="move-pricing-table__intro text-body">
          {{ section.settings.intro }}
        </div>
      {%- endif -%}
    </header>

    <div class="move-pricing-table__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'plan' -%}
          {%- liquid
            assign highlight = false
            if section.settings.highlight_plan_handle != blank and block.settings.plan_handle != blank
              if section.settings.highlight_plan_handle == block.settings.plan_handle
                assign highlight = true
              endif
            endif
          -%}
          <article
            class="move-pricing-table__card{% if highlight %} move-pricing-table__card--highlight{% endif %}"
            {{ block.shopify_attributes }}
          >
            <header class="move-pricing-table__card-header">
              {%- if block.settings.icon != blank -%}
                <div class="move-pricing-table__icon media media--square">
                  {{ block.settings.icon | image_url: width: 64 | image_tag: widths: '32, 48, 64', class: 'move-pricing-table__icon-image' }}
                </div>
              {%- endif -%}
              {%- if block.settings.badge != blank -%}
                <p class="move-pricing-table__badge caption-with-letter-spacing">
                  {{ block.settings.badge }}
                </p>
              {%- endif -%}

              {%- if block.settings.plan_name != blank -%}
                <h3 class="h3">{{ block.settings.plan_name }}</h3>
              {%- endif -%}

              {%- if block.settings.duration_label != blank -%}
                <p class="move-pricing-table__duration">{{ block.settings.duration_label }}</p>
              {%- endif -%}
            </header>

            <div class="move-pricing-table__price">
              {%- if section.settings.show_monthly_price and block.settings.price_per_month != blank -%}
                <p class="move-pricing-table__price-main">
                  <span class="move-pricing-table__price-amount">{{ block.settings.price_per_month }}</span>
                  <span class="move-pricing-table__price-unit">/ mnd</span>
                </p>
              {%- endif -%}

              {%- if block.settings.total_price != blank -%}
                <p class="move-pricing-table__price-total">{{ block.settings.total_price }}</p>
              {%- endif -%}
            </div>

            {%- if block.settings.description != blank -%}
              <div class="move-pricing-table__description">
                {{ block.settings.description }}
              </div>
            {%- endif -%}

            {%- if block.settings.benefits != blank -%}
              {%- assign benefits = block.settings.benefits | newline_to_br | split: '<br />' -%}
              <ul class="move-pricing-table__benefits">
                {%- for benefit in benefits -%}
                  {%- assign clean = benefit | strip -%}
                  {%- if clean != '' -%}
                    <li>{{ clean }}</li>
                  {%- endif -%}
                {%- endfor -%}
              </ul>
            {%- endif -%}

            <div class="move-pricing-table__cta">
              {%- if block.settings.primary_cta_label != blank -%}
                <a
                  {% if block.settings.primary_cta_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.primary_cta_link }}"
                  {% endif %}
                  class="button{% if highlight %} button--primary{% else %} button--secondary{% endif %}"
                >
                  {{- block.settings.primary_cta_label | escape -}}
                </a>
              {%- endif -%}
            </div>
          </article>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE pricing table",
  "tag": "section",
  "class": "section move-pricing-table",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Velg et løp som passer din hverdag"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text",
      "default": "Tre ulike løp – samme varme støtte. Velg 6, 9 eller 12 måneder avhengig av hvor mye tid du trenger til varig endring."
    },
    {
      "type": "text",
      "id": "highlight_plan_handle",
      "label": "Highlight plan handle",
      "info": "Matches the plan handle field on one of the blocks to highlight it.",
      "default": "plan-12m"
    },
    {
      "type": "checkbox",
      "id": "show_monthly_price",
      "label": "Show monthly price",
      "default": true
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "surface"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Top padding override",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding override",
      "default": 0
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "plan",
      "name": "Plan",
      "settings": [
        {
          "type": "text",
          "id": "plan_handle",
          "label": "Plan handle (for highlighting)",
          "info": "Short id used to match highlight setting, e.g. 'plan-12m'."
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Plan icon"
        },
        {
          "type": "text",
          "id": "plan_name",
          "label": "Plan name",
          "default": "12 måneder – Full livsstilsendring"
        },
        {
          "type": "text",
          "id": "duration_label",
          "label": "Duration label",
          "default": "12 måneder"
        },
        {
          "type": "text",
          "id": "price_per_month",
          "label": "Price per month",
          "default": "2 490 kr"
        },
        {
          "type": "text",
          "id": "total_price",
          "label": "Total price",
          "default": "Totalt 12 måneder – første måned gratis + 1 ekstra måned"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge",
          "default": "Mest populær"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Short description",
          "default": "Perfekt for deg som vil ha tydelig struktur, tett oppfølging og rom til å gjøre endring i ditt tempo."
        },
        {
          "type": "textarea",
          "id": "benefits",
          "label": "Benefits (one per line)",
          "default": "Ukentlig oppfølging\nTilgang til MOVE-appen\nTilpasset kost og trening"
        },
        {
          "type": "text",
          "id": "primary_cta_label",
          "label": "Primary CTA label",
          "default": "Start din dag én"
        },
        {
          "type": "url",
          "id": "primary_cta_link",
          "label": "Primary CTA link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MOVE pricing table",
      "category": "MOVE",
      "blocks": [
        { "type": "plan" },
        { "type": "plan" },
        { "type": "plan" }
      ]
    }
  ]
}
{% endschema %}
