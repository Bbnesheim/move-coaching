{{ 'section-move-quiz-entry.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveQuizEntry-{{ section.id }}"
  class="section move-quiz-entry {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="page-width move-section-padding">
    <div class="move-quiz-entry__inner move-quiz-entry__inner--{{ section.settings.alignment }}">
      {%- if section.settings.illustration != blank -%}
        <div class="move-quiz-entry__illustration media media--square">
          {{ section.settings.illustration | image_url: width: 160 | image_tag: widths: '80, 120, 160', class: 'move-quiz-entry__image' }}
        </div>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.body != blank -%}
        <div class="move-quiz-entry__body text-body">{{ section.settings.body }}</div>
      {%- endif -%}

      <div class="move-quiz-entry__actions">
        {%- if section.settings.primary_cta_label != blank -%}
          <a
            {% if section.settings.primary_cta_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.primary_cta_link }}"
            {% endif %}
            class="button button--primary"
          >
            {{- section.settings.primary_cta_label | escape -}}
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.secondary_text != blank -%}
        <div class="move-quiz-entry__secondary text-body">{{ section.settings.secondary_text }}</div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE quiz entry",
  "tag": "section",
  "class": "section move-quiz-entry",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Usikker på hvor du skal starte?"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body",
      "default": "Ta en kort quiz og få forslag til hva som passer deg og din hverdag."
    },
    {
      "type": "text",
      "id": "primary_cta_label",
      "label": "Primary CTA label",
      "default": "Ta quizen"
    },
    {
      "type": "url",
      "id": "primary_cta_link",
      "label": "Primary CTA link"
    },
    {
      "type": "textarea",
      "id": "secondary_text",
      "label": "Secondary text",
      "default": "Quizen tar bare noen minutter og gir deg et ærlig bilde av hvor du står i dag."
    },
    {
      "type": "image_picker",
      "id": "illustration",
      "label": "Illustration image"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Content alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "brown"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "MOVE quiz entry",
      "category": "MOVE"
    }
  ]
}
{% endschema %}
