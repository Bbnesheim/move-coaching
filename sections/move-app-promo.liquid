{{ 'section-move-app-promo.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase

  assign heading_font_size_mobile = section.settings.heading_font_size_mobile | default: 28
  assign heading_font_size_desktop = section.settings.heading_font_size_desktop | default: 42

  comment
    Fluid type without CSS division:
    size = A + B * 1vw
    Use 360px (3.6vw) -> mobile size, and 1200px (12vw) -> desktop size.
    B = (max-min) / (12 - 3.6) = (max-min) / 8.4
    A = min - B*3.6
  endcomment
  assign heading_delta = heading_font_size_desktop | minus: heading_font_size_mobile
  assign heading_slope = heading_delta | times: 1.0 | divided_by: 8.4
  assign heading_slope_at_360 = heading_slope | times: 3.6
  assign heading_intercept = heading_font_size_mobile | minus: heading_slope_at_360

  assign subheading_font_size_mobile = section.settings.subheading_font_size_mobile | default: 16
  assign subheading_font_size_desktop = section.settings.subheading_font_size_desktop | default: 16

  assign content_font_size_mobile = section.settings.content_font_size_mobile | default: 14
  assign content_font_size_desktop = section.settings.content_font_size_desktop | default: 16

  comment
    Fluid content type without CSS division:
    size = A + B * 1vw
    Use 360px (3.6vw) -> mobile size, and 1200px (12vw) -> desktop size.
    B = (max-min) / 8.4
    A = min - B*3.6
  endcomment
  assign content_delta = content_font_size_desktop | minus: content_font_size_mobile
  assign content_slope = content_delta | times: 1.0 | divided_by: 8.4
  assign content_slope_at_360 = content_slope | times: 3.6
  assign content_intercept = content_font_size_mobile | minus: content_slope_at_360

  assign subheading_style = section.settings.subheading_style | default: 'default'
  assign subheading_weight = section.settings.subheading_weight | default: 'regular'

  assign bullet_style = section.settings.bullet_style | default: 'disc'
-%}

<section
  id="MoveAppPromo-{{ section.id }}"
  class="section move-app-promo {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div
    class="page-width move-section-padding"
    style="--move-app-promo-heading-size-min: {{ heading_font_size_mobile }}px; --move-app-promo-heading-size-max: {{ heading_font_size_desktop }}px; --move-app-promo-heading-fluid-intercept: {{ heading_intercept }}px; --move-app-promo-heading-fluid-slope: {{ heading_slope }}vw; --move-app-promo-subheading-font-size-mobile: {{ subheading_font_size_mobile }}px; --move-app-promo-subheading-font-size-desktop: {{ subheading_font_size_desktop }}px; --move-app-promo-content-size-min: {{ content_font_size_mobile }}px; --move-app-promo-content-size-max: {{ content_font_size_desktop }}px; --move-app-promo-content-fluid-intercept: {{ content_intercept }}px; --move-app-promo-content-fluid-slope: {{ content_slope }}vw;{% if section.settings.padding_top > 0 %} padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}"
  >
    <div class="move-app-promo__inner">
      <div class="move-app-promo__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="h2">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <p class="move-app-promo__subheading move-app-promo__subheading--{{ subheading_style }} move-app-promo__subheading--weight-{{ subheading_weight }}">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>

      <div class="move-app-promo__intro">
        {%- for block in section.blocks -%}
          {%- if block.type == 'download_links' -%}
            {%- assign presentation = block.settings.presentation | default: 'icon' -%}
            <div class="move-app-promo__download" {{ block.shopify_attributes }}>
              <div class="move-app-promo__download-links move-app-promo__download-links--{{ presentation }}">
                {%- if block.settings.app_store_badge != blank -%}
                  {%- if presentation == 'icon' -%}
                    <a
                      {% if block.settings.app_store_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.app_store_link }}"
                      {% endif %}
                      class="move-app-promo__store-link move-app-promo__store-link--{{ block.settings.app_store_style | default: 'pink' }}"
                    >
                      {{ block.settings.app_store_badge | image_url: width: 120 | image_tag: widths: '60, 90, 120', class: 'move-app-promo__store-badge', loading: 'lazy' }}
                    </a>
                  {%- else -%}
                    <a
                      {% if block.settings.app_store_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.app_store_link }}"
                      {% endif %}
                      class="move-app-promo__download-link"
                    >
                      {{ block.settings.app_store_badge | image_url: width: 240 | image_tag: widths: '120, 180, 240', class: 'move-app-promo__download-badge', loading: 'lazy' }}
                    </a>
                  {%- endif -%}
                {%- endif -%}

                {%- if block.settings.play_store_badge != blank -%}
                  {%- if presentation == 'icon' -%}
                    <a
                      {% if block.settings.play_store_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.play_store_link }}"
                      {% endif %}
                      class="move-app-promo__store-link move-app-promo__store-link--{{ block.settings.play_store_style | default: 'brown' }}"
                    >
                      {{ block.settings.play_store_badge | image_url: width: 120 | image_tag: widths: '60, 90, 120', class: 'move-app-promo__store-badge', loading: 'lazy' }}
                    </a>
                  {%- else -%}
                    <a
                      {% if block.settings.play_store_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.play_store_link }}"
                      {% endif %}
                      class="move-app-promo__download-link"
                    >
                      {{ block.settings.play_store_badge | image_url: width: 240 | image_tag: widths: '120, 180, 240', class: 'move-app-promo__download-badge', loading: 'lazy' }}
                    </a>
                  {%- endif -%}
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}

        {%- if section.settings.body != blank -%}
          <div class="move-app-promo__body text-body">{{ section.settings.body }}</div>
        {%- endif -%}
      </div>

      <ul class="move-app-promo__bullets move-app-promo__bullets--{{ bullet_style }}">
        {%- for block in section.blocks -%}
          {%- if block.type == 'bullet' and block.settings.text != blank -%}
            <li class="move-app-promo__bullet" {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
          {%- endif -%}
        {%- endfor -%}
      </ul>

      <div class="move-app-promo__actions">
        {%- if section.settings.primary_cta_label != blank -%}
          <a
            {% if section.settings.primary_cta_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.primary_cta_link }}"
            {% endif %}
            class="button button--primary"
          >
            {{- section.settings.primary_cta_label | escape -}}
          </a>
        {%- endif -%}

        {%- if section.settings.secondary_cta_label != blank -%}
          <a
            {% if section.settings.secondary_cta_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.secondary_cta_link }}"
            {% endif %}
            class="button button--secondary move-app-promo__secondary-cta"
          >
            {{- section.settings.secondary_cta_label | escape -}}
          </a>
        {%- endif -%}
      </div>

      <div class="move-app-promo__media">
        {%- if section.settings.promo_video != blank -%}
          <div class="move-app-promo__screenshot media media--portrait media--transparent">
            {{ section.settings.promo_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'move-app-promo__video' }}
          </div>
        {%- elsif section.settings.screenshot != blank -%}
          <div class="move-app-promo__screenshot media media--portrait media--transparent">
            {{ section.settings.screenshot | image_url: width: 900 | image_tag: widths: '400, 600, 900', class: 'move-app-promo__image' }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

