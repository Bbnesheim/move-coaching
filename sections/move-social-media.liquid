{{ 'section-move-social-media.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveSocialMedia-{{ section.id }}"
  class="section move-social-media {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div
    class="page-width move-section-padding"
    style="{% if section.settings.padding_top > 0 %}padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}"
  >
    <header class="move-social-media__header {{ section.settings.heading_alignment }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.intro != blank -%}
        <div class="move-social-media__intro text-body">{{ section.settings.intro }}</div>
      {%- endif -%}
    </header>

    <div class="move-social-media__body">
      <div class="move-social-media__layout">
        <div class="move-social-media__column move-social-media__column--left">
          {%- if section.settings.main_image != blank -%}
            <div class="move-social-media__image media">
              {{ section.settings.main_image | image_url: width: 1600 | image_tag: widths: '800, 1200, 1600', sizes: '(min-width: 990px) 40vw, 100vw', class: 'move-social-media__image-img' }}
            </div>
          {%- endif -%}
        </div>

        <div class="move-social-media__column move-social-media__column--right">
          <div class="move-social-media__cards">
            <article class="move-social-media__card move-social-media__card--instagram">
              <div class="move-social-media__card-header">
                <span class="move-social-media__icon move-social-media__icon--instagram">
                  {{- 'icon-instagram.svg' | inline_asset_content -}}
                  <span class="visually-hidden">Instagram</span>
                </span>
                {%- if section.settings.instagram_label != blank -%}
                  <h3 class="h3 move-social-media__card-title">
                    {{ section.settings.instagram_label }}
                  </h3>
                {%- endif -%}
              </div>

              {%- if section.settings.instagram_handle != blank -%}
                <p class="move-social-media__card-handle text-body">
                  {{ section.settings.instagram_handle }}
                </p>
              {%- endif -%}

              {%- if section.settings.instagram_description != blank -%}
                <p class="move-social-media__card-description text-body">
                  {{ section.settings.instagram_description }}
                </p>
              {%- endif -%}

              {%- if section.settings.instagram_url != blank -%}
                <a
                  href="{{ section.settings.instagram_url }}"
                  class="button button--secondary move-social-media__card-cta"
                  target="_blank"
                  rel="noreferrer noopener"
                >
                  {{ section.settings.instagram_cta_label | default: section.settings.default_cta_label | escape }}
                </a>
              {%- endif -%}
            </article>

            <article class="move-social-media__card move-social-media__card--tiktok">
              <div class="move-social-media__card-header">
                <span class="move-social-media__icon move-social-media__icon--tiktok">
                  {{- 'icon-tiktok.svg' | inline_asset_content -}}
                  <span class="visually-hidden">TikTok</span>
                </span>
                {%- if section.settings.tiktok_label != blank -%}
                  <h3 class="h3 move-social-media__card-title">
                    {{ section.settings.tiktok_label }}
                  </h3>
                {%- endif -%}
              </div>

              {%- if section.settings.tiktok_handle != blank -%}
                <p class="move-social-media__card-handle text-body">
                  {{ section.settings.tiktok_handle }}
                </p>
              {%- endif -%}

              {%- if section.settings.tiktok_description != blank -%}
                <p class="move-social-media__card-description text-body">
                  {{ section.settings.tiktok_description }}
                </p>
              {%- endif -%}

              {%- if section.settings.tiktok_url != blank -%}
                <a
                  href="{{ section.settings.tiktok_url }}"
                  class="button button--secondary move-social-media__card-cta"
                  target="_blank"
                  rel="noreferrer noopener"
                >
                  {{ section.settings.tiktok_cta_label | default: section.settings.default_cta_label | escape }}
                </a>
              {%- endif -%}
            </article>

            <article class="move-social-media__card move-social-media__card--facebook">
              <div class="move-social-media__card-header">
                <span class="move-social-media__icon move-social-media__icon--facebook">
                  {{- 'icon-facebook.svg' | inline_asset_content -}}
                  <span class="visually-hidden">Facebook</span>
                </span>
                {%- if section.settings.facebook_label != blank -%}
                  <h3 class="h3 move-social-media__card-title">
                    {{ section.settings.facebook_label }}
                  </h3>
                {%- endif -%}
              </div>

              {%- if section.settings.facebook_handle != blank -%}
                <p class="move-social-media__card-handle text-body">
                  {{ section.settings.facebook_handle }}
                </p>
              {%- endif -%}

              {%- if section.settings.facebook_description != blank -%}
                <p class="move-social-media__card-description text-body">
                  {{ section.settings.facebook_description }}
                </p>
              {%- endif -%}

              {%- if section.settings.facebook_url != blank -%}
                <a
                  href="{{ section.settings.facebook_url }}"
                  class="button button--secondary move-social-media__card-cta"
                  target="_blank"
                  rel="noreferrer noopener"
                >
                  {{ section.settings.facebook_cta_label | default: section.settings.default_cta_label | escape }}
                </a>
              {%- endif -%}
            </article>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE social media",
  "tag": "section",
  "class": "section move-social-media",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Følg oss i hverdagen"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text",
      "default": "Få et ærlig innblikk i hverdagen, mat, trening og små steg mot varig endring."
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Left column image"
    },
    {
      "type": "text",
      "id": "default_cta_label",
      "label": "Default CTA label",
      "default": "Følg på Instagram"
    },

    { "type": "header", "content": "Instagram card" },
    { "type": "text", "id": "instagram_label", "label": "Label", "default": "Aline på Instagram" },
    { "type": "text", "id": "instagram_handle", "label": "Handle", "default": "@coach.alineskk" },
    { "type": "url", "id": "instagram_url", "label": "Profile URL" },
    {
      "type": "textarea",
      "id": "instagram_description",
      "label": "Description",
      "default": "Personlig innhold fra Aline – hverdagsliv, refleksjoner og små seire fra MOVE-familien."
    },
    { "type": "text", "id": "instagram_cta_label", "label": "CTA label (optional)" },

    { "type": "header", "content": "TikTok card" },
    { "type": "text", "id": "tiktok_label", "label": "Label", "default": "Aline på TikTok" },
    { "type": "text", "id": "tiktok_handle", "label": "Handle", "default": "@alineskk" },
    { "type": "url", "id": "tiktok_url", "label": "Profile URL" },
    {
      "type": "textarea",
      "id": "tiktok_description",
      "label": "Description",
      "default": "Kortformat video, hverdagsglimt, motivasjon og lavterskel tips."
    },
    { "type": "text", "id": "tiktok_cta_label", "label": "CTA label (optional)" },

    { "type": "header", "content": "Facebook card" },
    { "type": "text", "id": "facebook_label", "label": "Label", "default": "Aline på Facebook" },
    { "type": "text", "id": "facebook_handle", "label": "Handle", "default": "Aline Skancke Husby" },
    { "type": "url", "id": "facebook_url", "label": "Profile URL" },
    {
      "type": "textarea",
      "id": "facebook_description",
      "label": "Description",
      "default": "Lengre innlegg, deling av artikler og nær kommunikasjon med Aline."
    },
    { "type": "text", "id": "facebook_cta_label", "label": "CTA label (optional)" },

    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "surface"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Top padding override",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding override",
      "default": 0
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "MOVE social media",
      "category": "MOVE"
    }
  ]
}
{% endschema %}
