{{ 'section-move-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #MoveHeroNav-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
{%- endstyle -%}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveHeroNav-{{ section.id }}"
  class="section move-hero {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  {%- if section.settings.image != blank -%}
    <div class="move-hero__bg">
      {{
        section.settings.image
        | image_url: width: 2200
        | image_tag:
          widths: '800, 1200, 1600, 2000, 2200',
          sizes: '100vw',
          class: 'move-hero__bg-image'
      }}
    </div>
  {%- endif -%}

  <div
    class="page-width move-section-padding move-hero--with-nav"
    style="{% if section.settings.padding_top > 0 %}padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}"
  >
    <!-- MOVE hero navigation merged into hero image -->
    <div class="move-hero__nav" data-move-hero-nav>
      <a href="{{ routes.root_url }}" class="move-hero__logo" style="max-width: {{ settings.logo_width }}px;">
        {%- if settings.logo != blank -%}
          {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
          {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
          {% capture hero_logo_sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
          {% capture hero_logo_widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
          {{
            settings.logo
            | image_url: width: 600
            | image_tag:
              class: 'move-hero__logo-image',
              widths: hero_logo_widths,
              height: logo_height,
              width: settings.logo_width,
              alt: logo_alt,
              sizes: hero_logo_sizes
          }}
        {%- else -%}
          <span class="h3">{{ shop.name }}</span>
        {%- endif -%}
      </a>

      {%- if section.settings.nav_menu != blank -%}
        <!-- Inline column menu for >= 955px -->
        <nav class="move-hero__nav-menu move-hero__nav-menu--inline" aria-label="Hovedmeny">
          <ul class="move-hero__nav-list" role="list">
            {%- for link in section.settings.nav_menu.links -%}
              <li>
                <a
                  href="{{ link.url }}"
                  class="move-hero__nav-link{% if link.current %} move-hero__nav-link--active{% endif %}"
                >
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </nav>

        <!-- Hamburger toggle + overlay menu for < 955px -->
        <button
          class="move-hero__menu-toggle"
          type="button"
          aria-label="Åpne meny"
          aria-expanded="false"
          aria-controls="MoveHeroNavOverlay-{{ section.id }}"
        >
          <span class="move-hero__menu-toggle-icon" aria-hidden="true">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </button>

        <div class="move-hero__nav-overlay" id="MoveHeroNavOverlay-{{ section.id }}" aria-hidden="true">
          <nav class="move-hero__nav-menu move-hero__nav-menu--overlay" aria-label="Hovedmeny">
            <ul class="move-hero__nav-list" role="list">
              {%- for link in section.settings.nav_menu.links -%}
                <li>
                  <a
                    href="{{ link.url }}"
                    class="move-hero__nav-link{% if link.current %} move-hero__nav-link--active{% endif %}"
                  >
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        </div>
      {%- endif -%}
    </div>

    <div class="move-hero__inner move-hero__inner--{{ section.settings.layout }}">
      <div class="move-hero__content">
        {%- if section.settings.badge_text != blank -%}
          <p class="move-hero__badge caption-with-letter-spacing">{{ section.settings.badge_text }}</p>
        {%- endif -%}

        <div class="move-hero__headline-layer move-hero__headline-layer--{{ section.settings.headline_style }}">
          {%- if section.settings.heading != blank -%}
            <h1 class="move-hero__heading h1">
              {{ section.settings.heading }}
            </h1>
          {%- endif -%}

          {%- if section.settings.subheading != blank -%}
            <div class="move-hero__subheading text-body">
              {{ section.settings.subheading }}
            </div>
          {%- endif -%}
        </div>

        <div class="move-hero__buttons">
          {%- if section.settings.primary_cta_label != blank -%}
            <a
              {% if section.settings.primary_cta_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.primary_cta_link }}"
              {% endif %}
              class="button button--primary"
            >
              {{- section.settings.primary_cta_label | escape -}}
            </a>
          {%- endif -%}

          {%- if section.settings.secondary_cta_label != blank -%}
            <a
              {% if section.settings.secondary_cta_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.secondary_cta_link }}"
              {% endif %}
              class="button button--secondary"
            >
              {{- section.settings.secondary_cta_label | escape -}}
            </a>
          {%- endif -%}
        </div>
      </div>

    </div>
  </div>
</section>

{% javascript %}
  function initMoveHeroNav(section) {
    const nav = section.querySelector('[data-move-hero-nav]');
    if (!nav) return;

    const toggle = nav.querySelector('.move-hero__menu-toggle');
    const overlay = nav.querySelector('.move-hero__nav-overlay');
    if (!toggle || !overlay) return;

    // State for the announcement gradient pulse in the overlay header.
    const PULSE_INTERVAL_MS = 5000;
    const PULSE_DURATION_MS = 1400;
    const FIRST_PULSE_DELAY_MS = 5000;
    let overlayAnnouncement = null;
    let pulseIntervalId = null;
    let firstPulseTimeoutId = null;

    const runAnnouncementPulse = () => {
      if (!overlayAnnouncement || !document.body.contains(overlayAnnouncement)) return;
      overlayAnnouncement.classList.add('move-hero__nav-announcement--animate');
      setTimeout(() => {
        if (!overlayAnnouncement || !document.body.contains(overlayAnnouncement)) return;
        overlayAnnouncement.classList.remove('move-hero__nav-announcement--animate');
      }, PULSE_DURATION_MS);
    };

    const schedulePulsesForCurrentOpen = () => {
      if (!overlayAnnouncement) return;

      // Clear any previous timers in case we're reopening quickly.
      if (firstPulseTimeoutId) {
        clearTimeout(firstPulseTimeoutId);
        firstPulseTimeoutId = null;
      }
      if (pulseIntervalId) {
        clearInterval(pulseIntervalId);
        pulseIntervalId = null;
      }

      // Wait 5 seconds after the overlay has been opened before
      // starting the gradient pulse loop for this open session.
      firstPulseTimeoutId = setTimeout(() => {
        // If the overlay is no longer open when the delay expires, abort.
        if (overlay.getAttribute('aria-hidden') === 'true') return;

        runAnnouncementPulse();

        pulseIntervalId = setInterval(() => {
          if (overlay.getAttribute('aria-hidden') === 'true') {
            clearInterval(pulseIntervalId);
            pulseIntervalId = null;
            return;
          }
          runAnnouncementPulse();
        }, PULSE_INTERVAL_MS);
      }, FIRST_PULSE_DELAY_MS);
    };

    // Mirror the current announcement bar text into the hero mobile
    // navigation overlay so it appears as part of the overlay header.
    const announcementSource =
      document.querySelector('.announcement-bar__message span') ||
      document.querySelector('.announcement-bar__announcement .announcement-bar__message span');

    if (announcementSource && !overlay.querySelector('.move-hero__nav-announcement')) {
      overlayAnnouncement = document.createElement('p');
      overlayAnnouncement.className = 'move-hero__nav-announcement';
      overlayAnnouncement.textContent = announcementSource.textContent;
      overlay.insertBefore(overlayAnnouncement, overlay.firstChild);
    } else {
      overlayAnnouncement = overlay.querySelector('.move-hero__nav-announcement');
    }

    const openClass = 'move-hero__nav--open';

    const setState = (isOpen) => {
      nav.classList.toggle(openClass, isOpen);
      toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      toggle.setAttribute('aria-label', isOpen ? 'Lukk meny' : 'Åpne meny');
      overlay.setAttribute('aria-hidden', isOpen ? 'false' : 'true');

      if (isOpen) {
        document.documentElement.classList.add('move-hero-nav-open');
        // Schedule the gradient animation for this open; it will
        // begin 5 seconds after the overlay is opened.
        schedulePulsesForCurrentOpen();
      } else {
        document.documentElement.classList.remove('move-hero-nav-open');

        // Stop pulsing once the overlay is closed so we don't animate
        // hidden content, and clear any pending first pulse timeout.
        if (pulseIntervalId) {
          clearInterval(pulseIntervalId);
          pulseIntervalId = null;
        }
        if (firstPulseTimeoutId) {
          clearTimeout(firstPulseTimeoutId);
          firstPulseTimeoutId = null;
        }
      }
    };

    const close = () => {
      if (!nav.classList.contains(openClass)) return;
      setState(false);
    };

    const handleToggleClick = () => {
      const isOpen = !nav.classList.contains(openClass);
      setState(isOpen);
    };

    toggle.addEventListener('click', handleToggleClick);

    overlay.addEventListener('click', (event) => {
      if (event.target === overlay) {
        close();
      }
    });

    const handleKeydown = (event) => {
      if (event.key === 'Escape') {
        close();
      }
    };

    document.addEventListener('keydown', handleKeydown);

    const mql = window.matchMedia('(min-width: 955px)');
    const handleMediaChange = (event) => {
      if (event.matches) {
        // When we cross back into desktop range, ensure the overlay is closed
        close();
      }
    };

    if (mql.addEventListener) {
      mql.addEventListener('change', handleMediaChange);
    } else if (mql.addListener) {
      // Safari fallback
      mql.addListener(handleMediaChange);
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    document
      .querySelectorAll('[data-move-hero-nav]')
      .forEach((section) => initMoveHeroNav(section.closest('section') || section));
  });

  document.addEventListener('shopify:section:load', (event) => {
    const section = event.target;
    if (section && section.querySelector && section.querySelector('[data-move-hero-nav]')) {
      initMoveHeroNav(section);
    }
  });
{% endjavascript %}

{% schema %}
{
  "name": "MOVE hero + nav",
  "tag": "section",
  "class": "section move-hero",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "link_list",
      "id": "nav_menu",
      "label": "Hero navigation menu"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Langsiktig livsstilsendring med støtte hele veien"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Coaching, app og støtte som faktisk passer inn i tidsklemma."
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "6, 9 eller 12 måneder – du velger tempoet."
    },
    {
      "type": "text",
      "id": "primary_cta_label",
      "label": "Primary CTA label",
      "default": "Start din dag én"
    },
    {
      "type": "url",
      "id": "primary_cta_link",
      "label": "Primary CTA link"
    },
    {
      "type": "text",
      "id": "secondary_cta_label",
      "label": "Secondary CTA label",
      "default": "Ta quizen først"
    },
    {
      "type": "url",
      "id": "secondary_cta_link",
      "label": "Secondary CTA link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image (background)"
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        { "value": "square", "label": "Square" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "landscape", "label": "Landscape" }
      ],
      "default": "portrait"
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "label": "Image overlay opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "text_left", "label": "Text left, image right" },
        { "value": "text_right", "label": "Text right, image left" }
      ],
      "default": "text_left"
    },
    {
      "type": "select",
      "id": "headline_style",
      "label": "Headline style",
      "options": [
        { "value": "on_image", "label": "On image" },
        { "value": "on_background", "label": "On background" }
      ],
      "default": "on_image"
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "cream"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Top padding override",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding override",
      "default": 0
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "MOVE hero + nav",
      "category": "MOVE"
    }
  ]
}
{% endschema %}
