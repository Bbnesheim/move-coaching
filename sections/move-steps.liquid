{{ 'section-move-steps.css' | asset_url | stylesheet_tag }}
{{ 'section-move-steps.js' | asset_url | script_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase

  assign header_placement = section.settings.header_placement | default: 'above'
  assign heading_align = section.settings.heading_alignment | default: 'center'
  assign intro_align = section.settings.intro_alignment | default: 'inherit'
  if intro_align == 'inherit'
    assign intro_align = heading_align
  endif
-%}

<section
  id="MoveSteps-{{ section.id }}"
  class="section move-steps {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div
    class="move-steps__container move-section-padding move-steps__container--header-{{ header_placement }}"
    style="{% if section.settings.padding_top > 0 %}padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}--move-steps-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;--move-steps-heading-size-desktop: {{ section.settings.heading_size_desktop }}px;--move-steps-intro-size-mobile: {{ section.settings.intro_size_mobile }}px;--move-steps-intro-size-desktop: {{ section.settings.intro_size_desktop }}px;--move-steps-header-max-width: {{ section.settings.header_max_width }}rem;"
  >
    <div class="move-steps__layout move-steps__layout--{{ header_placement }}">
      <header class="move-steps__header move-steps__header--align-{{ heading_align }}">
        {%- if section.settings.heading != blank -%}
          <h2 class="h2">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.intro != blank -%}
          <div class="move-steps__intro move-steps__intro--align-{{ intro_align }} text-body">
            {{ section.settings.intro }}
          </div>
        {%- endif -%}
      </header>

      <div class="move-steps__journey" data-move-steps>
        <div class="move-steps__path" aria-hidden="true">
          <svg class="move-steps__path-svg" data-move-steps-path preserveAspectRatio="none"></svg>
        </div>

        <ol class="move-steps__list" role="list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'step' -%}
              <li
                class="move-steps__step"
                data-move-steps-step
                data-step-index="{{ forloop.index0 }}"
                {{ block.shopify_attributes }}
              >
                <button
                  class="move-steps__step-button"
                  type="button"
                  aria-label="Steg {{ block.settings.step_label | escape }}: {{ block.settings.title | escape }}"
                >
                  <div class="move-steps__side">
                    <div class="move-steps__panel move-steps__media">
                      {%- if block.settings.icon != blank -%}
                        <div class="move-steps__media-inner">
                          {{
                            block.settings.icon
                            | image_url: width: 1400
                            | image_tag:
                              widths: '320, 480, 720, 960, 1200, 1400',
                              sizes: '(min-width: 990px) 520px, (min-width: 750px) 440px, 92vw',
                              class: 'move-steps__image',
                              loading: 'lazy'
                          }}
                        </div>
                      {%- endif -%}

                      <div class="move-steps__overlay">
                        {%- if block.settings.title != blank -%}
                          <h3 class="h3 move-steps__title">{{ block.settings.title }}</h3>
                        {%- endif -%}
                        {%- if block.settings.description != blank -%}
                          <p class="move-steps__text text-body">{{ block.settings.description }}</p>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>

                  <div class="move-steps__center">
                    <span class="move-steps__node" data-move-steps-node>
                      {%- if block.settings.step_label != blank -%}
                        <span class="move-steps__node-label">{{ block.settings.step_label }}</span>
                      {%- endif -%}
                    </span>
                  </div>

                  <div class="move-steps__spacer" aria-hidden="true"></div>
                </button>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ol>
      </div>
    </div>
  </div>
</section>

