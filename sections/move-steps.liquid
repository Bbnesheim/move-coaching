{{ 'section-move-steps.css' | asset_url | stylesheet_tag }}
{{ 'section-move-steps.js' | asset_url | script_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveSteps-{{ section.id }}"
  class="section move-steps {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div
    class="move-steps__container move-section-padding"
    style="{% if section.settings.padding_top > 0 %}padding-top: {{ section.settings.padding_top }}px;{% endif %}{% if section.settings.padding_bottom > 0 %} padding-bottom: {{ section.settings.padding_bottom }}px;{% endif %}"
  >
    <header class="move-steps__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.intro != blank -%}
        <div class="move-steps__intro text-body">{{ section.settings.intro }}</div>
      {%- endif -%}
    </header>

    <div class="move-steps__journey" data-move-steps>
      <div class="move-steps__path" aria-hidden="true">
        <svg class="move-steps__path-svg" data-move-steps-path preserveAspectRatio="none"></svg>
      </div>

      <ol class="move-steps__list" role="list">
        {%- for block in section.blocks -%}
          {%- if block.type == 'step' -%}
            <li
              class="move-steps__step"
              data-move-steps-step
              data-step-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              <button
                class="move-steps__step-button"
                type="button"
                aria-label="Steg {{ block.settings.step_label | escape }}: {{ block.settings.title | escape }}"
              >
                <div class="move-steps__side">
                  <div class="move-steps__panel move-steps__media">
                    {%- if block.settings.icon != blank -%}
                      <div class="move-steps__media-inner">
                        {{
                          block.settings.icon
                          | image_url: width: 1400
                          | image_tag:
                            widths: '320, 480, 720, 960, 1200, 1400',
                            sizes: '(min-width: 990px) 520px, (min-width: 750px) 440px, 92vw',
                            class: 'move-steps__image',
                            loading: 'lazy'
                        }}
                      </div>
                    {%- endif -%}

                    <div class="move-steps__overlay">
                      {%- if block.settings.title != blank -%}
                        <h3 class="h3 move-steps__title">{{ block.settings.title }}</h3>
                      {%- endif -%}
                      {%- if block.settings.description != blank -%}
                        <p class="move-steps__text text-body">{{ block.settings.description }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                </div>

                <div class="move-steps__center">
                  <span class="move-steps__node" data-move-steps-node>
                    {%- if block.settings.step_label != blank -%}
                      <span class="move-steps__node-label">{{ block.settings.step_label }}</span>
                    {%- endif -%}
                  </span>
                </div>

                <div class="move-steps__spacer" aria-hidden="true"></div>
              </button>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ol>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE steps",
  "tag": "section",
  "class": "section move-steps",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Slik fungerer det"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text",
      "default": "En enkel prosess fra første innsending til skreddersydd plan, tett støtte og nye vaner som varer."
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "surface"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Top padding override",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding override",
      "default": 0
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "step_label",
          "label": "Step label",
          "default": "1"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Send inn spørreskjema"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Du forteller meg om mål, hverdag, erfaring og hva du ønsker å få til – så vi kan tilpasse alt fra start."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MOVE steps",
      "category": "MOVE",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "step_label": "1",
            "title": "Send inn spørreskjema",
            "description": "Du forteller meg om mål, hverdag og preferanser – så vi kan starte med en plan som faktisk passer livet ditt."
          }
        },
        {
          "type": "step",
          "settings": {
            "step_label": "2",
            "title": "Få skreddersydd plan i appen",
            "description": "Du får treningsprogram, kostholdsplan og verktøy i MOVE-appen – tilpasset nivå, utstyr og tid."
          }
        },
        {
          "type": "step",
          "settings": {
            "step_label": "3",
            "title": "Tett oppfølging hele veien",
            "description": "Ukentlige innsjekker, justeringer og chat-support gjør at du bygger varige vaner – steg for steg."
          }
        }
      ]
    }
  ]
}
{% endschema %}
