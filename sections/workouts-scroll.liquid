{{ 'section-workouts-scroll.css' | asset_url | stylesheet_tag }}
{{ 'section-workouts-scroll.js' | asset_url | script_tag }}

{%- assign first_block = section.blocks.first -%}

<section
  id="WorkoutsScroll-{{ section.id }}"
  class="section workouts-scroll move-workouts-scroll color-{{ section.settings.color_scheme }} gradient"
  data-workouts-scroll
  data-section-id="{{ section.id }}"
  data-duration-vh="{{ section.settings.scroll_duration_vh }}"
  style="--workouts-scroll-duration-vh: {{ section.settings.scroll_duration_vh }};"
>
  <div class="workouts-scroll__scene" data-workouts-scroll-scene>
    <div class="workouts-scroll__pin" data-workouts-scroll-pin>
      {%- if section.settings.background_video_url != blank -%}
        <div class="workouts-scroll__bg" aria-hidden="true">
          <video
            class="workouts-scroll__bg-video"
            data-workouts-scroll-bg-video
            autoplay
            muted
            loop
            playsinline
            preload="metadata"
          >
            <source src="{{ section.settings.background_video_url }}" type="video/mp4">
          </video>
        </div>
      {%- endif -%}

      <div class="workouts-scroll__overlay page-width">
        {%- if section.settings.heading != blank -%}
          <h2 class="workouts-scroll__heading {{ section.settings.heading_size }}" data-workouts-scroll-heading>
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        <div
          id="WorkoutsScrollPanel-{{ section.id }}"
          class="workouts-scroll__layout"
          aria-live="polite"
        >
          <div class="workouts-scroll__left">
            <div class="workouts-scroll__media" data-workouts-scroll-media>
              {%- if first_block != blank -%}
                {%- if first_block.settings.media_type == 'video' and first_block.settings.media_video_url != blank -%}
                  <video
                    muted
                    loop
                    autoplay
                    playsinline
                    preload="metadata"
                    {%- if first_block.settings.media_video_poster != blank -%}
                      poster="{{ first_block.settings.media_video_poster | image_url: width: 1200 }}"
                    {%- endif -%}
                  >
                    <source src="{{ first_block.settings.media_video_url }}" type="video/mp4">
                  </video>
                {%- else -%}
                  {%- if first_block.settings.media_image != blank -%}
                    {{
                      first_block.settings.media_image
                      | image_url: width: 1400
                      | image_tag:
                        widths: '400, 600, 800, 1000, 1200, 1400',
                        sizes: '(min-width: 990px) 40vw, 86vw',
                        loading: 'lazy'
                    }}
                  {%- else -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                {%- endif -%}
              {%- endif -%}
            </div>
          </div>

          <div class="workouts-scroll__right">
            <div class="workouts-scroll__card" data-workouts-scroll-card>
              <h3 class="workouts-scroll__card-title" data-workouts-scroll-card-title>
                {%- if first_block != blank -%}
                  {{- first_block.settings.card_title | default: '' -}}
                {%- endif -%}
              </h3>
              <div class="workouts-scroll__card-body rte" data-workouts-scroll-card-body>
                {%- if first_block != blank -%}
                  {{- first_block.settings.card_body -}}
                {%- endif -%}
              </div>
            </div>

            <div class="workouts-scroll__labels" role="tablist" aria-label="Workout types">
              {%- for block in section.blocks -%}
                <button
                  id="WorkoutsScrollLabel-{{ section.id }}-{{ forloop.index0 }}"
                  type="button"
                  class="workouts-scroll__label{% if forloop.first %} is-active{% endif %}"
                  data-workouts-scroll-label
                  data-index="{{ forloop.index0 }}"
                  role="tab"
                  aria-controls="WorkoutsScrollPanel-{{ section.id }}"
                  aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                  tabindex="{% if forloop.first %}0{% else %}-1{% endif %}"
                >
                  {{- block.settings.label | escape -}}
                </button>
              {%- endfor -%}
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script type="application/json" data-workouts-scroll-data>
    {
      "durationVh": {{ section.settings.scroll_duration_vh | json }},
      "items": [
        {%- for block in section.blocks limit: 3 -%}
          {
            "label": {{ block.settings.label | json }},
            "cardTitle": {{ block.settings.card_title | json }},
            "cardBody": {{ block.settings.card_body | json }},
            "media": {
              "type": {{ block.settings.media_type | json }},
              "src": {%- if block.settings.media_type == 'video' -%}
                {{ block.settings.media_video_url | json }}
              {%- else -%}
                {%- if block.settings.media_image != blank -%}
                  {{ block.settings.media_image | image_url: width: 1400 | json }}
                {%- else -%}
                  {{ '' | json }}
                {%- endif -%}
              {%- endif -%},
              "poster": {%- if block.settings.media_video_poster != blank -%}
                {{ block.settings.media_video_poster | image_url: width: 1200 | json }}
              {%- else -%}
                {{ '' | json }}
              {%- endif -%},
              "alt": {%- if block.settings.media_image != blank -%}
                {{ block.settings.media_image.alt | json }}
              {%- else -%}
                {{ '' | json }}
              {%- endif -%}
            }
          }{%- unless forloop.last -%},{%- endunless -%}
        {%- endfor -%}
      ]
    }
  </script>
</section>

{% schema %}
{
  "name": "Workouts scroll",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "OUR WORKOUTS"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h0", "label": "Large" },
        { "value": "h1", "label": "Medium" },
        { "value": "h2", "label": "Small" }
      ],
      "default": "h1"
    },
    {
      "type": "header",
      "content": "Background media"
    },
    {
      "type": "url",
      "id": "background_video_url",
      "label": "Background video URL (mp4)"
    },
    {
      "type": "header",
      "content": "Scroll"
    },
    {
      "type": "range",
      "id": "scroll_duration_vh",
      "label": "Pinned scroll duration (vh)",
      "min": 150,
      "max": 450,
      "step": 10,
      "unit": "vh",
      "default": 300
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "workout",
      "name": "Workout",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "HYBRID"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card title",
          "default": "Hybrid training"
        },
        {
          "type": "richtext",
          "id": "card_body",
          "label": "Card body",
          "default": "<p>A strength + conditioning blend designed to meet you where you are.</p>"
        },
        {
          "type": "select",
          "id": "media_type",
          "label": "Media type",
          "options": [
            { "value": "image", "label": "Image" },
            { "value": "video", "label": "Video (mp4 URL)" }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "media_image",
          "label": "Media image"
        },
        {
          "type": "url",
          "id": "media_video_url",
          "label": "Media video URL (mp4)"
        },
        {
          "type": "image_picker",
          "id": "media_video_poster",
          "label": "Video poster image (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Workouts scroll",
      "category": "MOVE",
      "blocks": [
        {
          "type": "workout",
          "settings": {
            "label": "HYBRID",
            "card_title": "Hybrid training",
            "card_body": "<p>A strength + conditioning blend designed to meet you where you are.</p>",
            "media_type": "image"
          }
        },
        {
          "type": "workout",
          "settings": {
            "label": "CROSSFIT",
            "card_title": "CrossFit",
            "card_body": "<p>High-intensity functional training coached with clear progressions.</p>",
            "media_type": "image"
          }
        },
        {
          "type": "workout",
          "settings": {
            "label": "HYROX",
            "card_title": "Hyrox",
            "card_body": "<p>Race-style endurance + strength training, built for measurable results.</p>",
            "media_type": "image"
          }
        }
      ]
    }
  ]
}
{% endschema %}
