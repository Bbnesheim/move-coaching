{{ 'section-move-faq.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign bg_class = ''
  case section.settings.background_variant
    when 'default'
      assign bg_class = 'move-bg-default'
    when 'cream'
      assign bg_class = 'move-bg-cream'
    when 'surface'
      assign bg_class = 'move-bg-surface'
    when 'brown'
      assign bg_class = 'move-bg-brown'
    when 'pink'
      assign bg_class = 'move-bg-pink'
  endcase
-%}

<section
  id="MoveFaq-{{ section.id }}"
  class="section move-faq {{ bg_class }} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="page-width move-section-padding">
    <header class="move-faq__header {{ section.settings.heading_alignment }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.intro != blank -%}
        <div class="move-faq__intro text-body">{{ section.settings.intro }}</div>
      {%- endif -%}
    </header>

    <div class="move-faq__list">
      {%- for block in section.blocks -%}
        {%- if block.type == 'question' -%}
          <details class="move-faq__item" {{ block.shopify_attributes }}>
            <summary class="move-faq__summary">
              <span class="move-faq__question">{{ block.settings.question }}</span>
            </summary>
            <div class="move-faq__answer rte">{{ block.settings.answer }}</div>
          </details>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOVE FAQ",
  "tag": "section",
  "class": "section move-faq",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ofte stilte spørsmål"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text",
      "default": "Her finner du svar på de vanligste spørsmålene om MOVE Coaching, betaling, app og praktisk gjennomføring."
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "background_variant",
      "label": "Background",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "cream", "label": "Cream" },
        { "value": "surface", "label": "Surface" },
        { "value": "brown", "label": "Brown" },
        { "value": "pink", "label": "Pink" }
      ],
      "default": "surface"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Hvordan fungerer MOVE Coaching i praksis?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Du får personlig oppfølging av Aline kombinert med MOVE-appen, ukentlige check-ins og støtte som tar hensyn til familie, jobb og energi.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MOVE FAQ",
      "category": "MOVE",
      "blocks": [
        { "type": "question" },
        { "type": "question" },
        { "type": "question" }
      ]
    }
  ]
}
{% endschema %}
