{
  "color": {
    "palette": {
      "brownPrimary": "#5C4842",
      "pinkSecondary": "#F5B5C4",
      "creamBackground": "#F9F5F0",
      "textDarkGrey": "#2F2E2B",
      "white": "#FFFFFF"
    },
    "semantic": {
      "background": {
        "default": "{color.palette.creamBackground}",
        "surface": "{color.palette.white}",
        "muted": "#FDF9F4"
      },
      "text": {
        "primary": "{color.palette.textDarkGrey}",
        "inverse": "{color.palette.creamBackground}",
        "muted": "rgba(47, 46, 43, 0.7)"
      },
      "brand": {
        "primary": "{color.palette.brownPrimary}",
        "secondary": "{color.palette.pinkSecondary}"
      },
      "border": {
        "subtle": "#E2D6CC",
        "strong": "#C8B7AA"
      },
      "state": {
        "success": "#2D8A5F",
        "warning": "#C7881E",
        "error": "#C0392B"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "heading": "\"Playfair Display\", serif",
      "body": "\"Poppins\", system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif"
    },
    "scale": {
      "h1": {
        "fontSize": "3.0rem",
        "lineHeight": 1.15,
        "fontWeight": 700,
        "letterSpacing": "0em"
      },
      "h2": {
        "fontSize": "2.25rem",
        "lineHeight": 1.2,
        "fontWeight": 600,
        "letterSpacing": "0em"
      },
      "h3": {
        "fontSize": "1.75rem",
        "lineHeight": 1.3,
        "fontWeight": 600,
        "letterSpacing": "0em"
      },
      "body": {
        "fontSize": "1rem",
        "lineHeight": 1.6,
        "fontWeight": 400,
        "letterSpacing": "0em"
      },
      "bodyLarge": {
        "fontSize": "1.125rem",
        "lineHeight": 1.7,
        "fontWeight": 400,
        "letterSpacing": "0em"
      },
      "small": {
        "fontSize": "0.875rem",
        "lineHeight": 1.5,
        "fontWeight": 400,
        "letterSpacing": "0em"
      },
      "button": {
        "fontSize": "1rem",
        "lineHeight": 1.2,
        "fontWeight": 600,
        "letterSpacing": "0.03em",
        "textTransform": "uppercase"
      }
    }
  },
  "spacing": {
    "base": 4,
    "scale": {
      "xs": 4,
      "sm": 8,
      "md": 16,
      "lg": 24,
      "xl": 32,
      "2xl": 40,
      "3xl": 48
    }
  },
  "radius": {
    "none": 0,
    "sm": 4,
    "md": 8,
    "lg": 12,
    "pill": 9999
  },
  "shadow": {
    "subtle": "0 4px 12px rgba(0, 0, 0, 0.05)",
    "medium": "0 8px 24px rgba(0, 0, 0, 0.08)",
    "strong": "0 12px 32px rgba(0, 0, 0, 0.12)"
  }
}
